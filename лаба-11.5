#include <stdio.h>

int main()
{
    long long int x;
    printf("Введите любое целое число: ");
    scanf("%lld", &x);
    if (x == 0)
    {
        printf("Это нулевое число.");
    }
    else if (x > 0)
    {
        if (x % 2 == 0)
        {
            printf("Это положительноe чётное число.");
        }
        else
        {
            printf("Это положительноe нечётное число.");
        }
    }
    else
    {
        if (x % 2 == 0)
        {
            printf("Это отрицательноe чётное число.");
        }
        else
        {
            printf("Это отрицательноe нечётное число.");
        }
    }
    return 0;
}
